pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'nakil-sistemi'
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        JAVA_TOOL_OPTIONS = "-Dfile.encoding=UTF-8"
        // Docker aşamasının çalışması için bunu ekleyelim
        SKIP_DOCKER = 'false'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/irmgdk/MahkumNakilSistemi.git'
                    ]]
                ])
                echo '✅ 1. Github kodları çekildi'
            }
        }

        stage('Build') {
            steps {
                // POM dosyası klasörün içinde olduğu için içeri girmeliyiz
                dir('nakil-sistemi') {
                    bat 'mvn clean compile -DskipTests'
                }
                echo '✅ 2. Kodlar build edildi'
            }
        }

        stage('Unit Tests') {
            steps {
                dir('nakil-sistemi') {
                    script {
                        try {
                            bat 'mvn test -Dtest=*Test'
                        } catch (error) {
                            echo "Birim testlerinde hata: ${error}"
                            currentBuild.result = 'UNSTABLE'
                        }
                    }
                }
            }
            post {
                always {
                    // Raporların yerini de klasöre göre güncelledik
                    junit allowEmptyResults: true, testResults: 'nakil-sistemi/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Integration Tests') {
            steps {
                dir('nakil-sistemi') {
                    script {
                        try {
                            bat 'mvn verify -DskipUnitTests -Dit.test=*IT,*IntegrationTest'
                        } catch (error) {
                            echo "Entegrasyon testlerinde hata: ${error}"
                            currentBuild.result = 'UNSTABLE'
                        }
                    }
                }
            }
        }

        stage('Docker Build & Run') {
            when { environment name: 'SKIP_DOCKER', value: 'false' }
            steps {
                dir('nakil-sistemi') {
                    script {
                        echo 'Docker imajı oluşturuluyor...'
                        bat 'docker build -t %DOCKER_IMAGE_NAME%:%DOCKER_TAG% .'
                        echo 'Docker containerlar başlatılıyor...'
                        bat 'docker-compose up -d'
                        sleep 30
                    }
                }
            }
        }

        stage('Selenium Tests') {
            steps {
                dir('nakil-sistemi') {
                    script {
                        // Maven testlerini yine klasör içinde koşturuyoruz
                        bat 'mvn test -Dtest=DashboardSeleniumTest'
                        bat 'mvn test -Dtest=AracSeleniumTest'
                        bat 'mvn test -Dtest=MahkumSeleniumTest'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline tamamlandı'
            // Docker-compose ana dizindeyse dir içine almaya gerek yok,
            // ama nakil-sistemi içindeyse buraya da dir('nakil-sistemi') eklemelisin.
            dir('nakil-sistemi') {
                bat 'docker-compose down 2>nul || echo "Docker compose zaten kapalı"'
            }
        }
    }
}